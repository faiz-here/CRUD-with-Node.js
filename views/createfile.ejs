<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>hello home</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-size: 20px;
        }
        body{
            background-color: black;
            color: white;
        }

        .container {
            width: 100%;
            height: 100%;
            /* background-color: yellow; */
        }

        .form {
            width: 60vw;
            height: 40vh;
            /* background-color: red; */
            margin-top: 2%;
        }
        .label{
            width: 100vw;
            height: 40px;
            font-size: 25px;
            font-weight: 600;
            font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            /* background-color: red; */
            display: block;
            /* text-align: center; */
            margin-left: 10%;
        }

        input {
            width: 80%;
            height: 50px;
            /* background-color: rgb(111, 111, 243); */
            display: block;
            text-align: center;
            margin-left: 10%;
            border-radius: 10px;
            border: none;
        }
        textarea {
            border-radius: 10px;
            margin-left: 10%;
            resize: none;
            width: 80%;
            height: 100px;
            /* background-color: rgb(111, 111, 243); */
            display: flex;
            text-align: center;
            align-items: center;
            justify-content: center;
            padding-top: 5%;
        }

        button {
            border-radius: 10px;
            width: 25%;
            height: 35px !important;
            background-color: blue;
            color: white;
            border: none;
            margin-left: 10%;
        }
        .files {
            margin-top: 10%;
            /* background-color: grey; */
            border: 1px solid black;
            width: auto !important;
            height: 100% !important;
            display: flex;
            flex-wrap: wrap;
            align-items: center;
        }

        .insidefile {
            width: 45% !important;
            margin:10px;
            padding: 10px;
        }

        .files h1 {
            width: 100%;
            height: 80%;
        }

        a {
            display: inline-block;
            padding: 5px 10px;
            background-color: blue;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            margin-top: 10px;
        }
        @media only screen and (max-width: 768px){
            .form {
        width: 90vw;
        height: auto;
        margin-top: 5%;
    }

    .label {
        font-size: 18px;
        margin-left: 5%;
        width: 90vw;
    }

    input{
        width: 90%;
        margin-left: 5%;
        font-size: 16px;
        height: 40px;
    }
    
    textarea {
        width: 90%;
        margin-left: 5%;
        font-size: 16px;
        height: 80px;
    }

    button {
        width: 40%;
        margin-left: 5%;
        font-size: 16px;
    }

    .insidefile {
        width: 100% !important;
        margin: 5px 0;
    }

    a {
        font-size: 16px;
        padding: 5px 15px;
    }
        }
        
    </style>
</head>

<body>
    <div class="container">
        <div class="form">
            <form action="/create" method="post">
                <div>
                    <label for="input" class="label"> Your File Name </label>
                    <input id="input" type="text" name="myname" placeholder="Type your file name" autocomplete="off"><br>
                </div>
                <div>
                    <label for="textarea" class="label">Your Content</label>
                    <textarea name="mytext" id="textarea" cols="30" rows="10" placeholder="Type your content"></textarea>
                </div>
                <br>
                <button type="submit">submit form</button>
            </form>
        </div>
            <div class="files">
                <% files.forEach(element=> { %>
                    <div class="insidefile">
                        <h1>
                            <%= element %>
                        </h1>
                        <a href="/files/<%= element %>">Read file</a>
                        <a href="/editname/<%= element %>">Rename file</a>
                        <a href="/delete/<%= element %>">Delete file</a>
                        <a href="/updatefiledata/<%= element %>">update file content</a>
                    </div>
                    <% }); %>
            </div>
    </div>
</body>

</html>